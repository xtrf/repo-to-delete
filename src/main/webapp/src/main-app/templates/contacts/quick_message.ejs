                
                <div class="modal modal-quick-contact" id="myModal">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">× <span data-localize="general.close">Close</span></button>
                    <h3 data-localize="modules.contact.quick-contact">Quick contact</h3>
                </div>

                <div class="modal-body">
                   <div class="content"> 
                   	 <form class="form-horizontal form-quick-contact">
                           <div class="control-group">
                               <label class="control-label" for="inputEmail" data-localize="modules.contact.form.subject">Subject:</label>
                                   <div class="controls">
                                       <input type="text" id="quick-message-subject" />
                                   </div>
                           </div>

                           <div class="control-group">
                               <label class="control-label" for="inputEmail" data-localize="modules.contact.form.message">Message:</label>
                                   <div class="controls">
                                       <textarea rows="5" id="quick-message-content"></textarea>
                                   </div>
                           </div>
                            <div class="control-group" style="display:none;"> 
                               <label class="control-label" for="inputEmail"></label>
                                   <div class="controls">
                                       <textarea rows="5" id="login"></textarea>
                                   </div>
                           </div>

                       </form>
                   
                   
                       <form class="form-horizontal form-quick-contact">
                           <div class="control-group">
                               <label class="control-label" for="" data-localize="modules.contact.form.to">To:</label>
                               	
                                   <div class="controls">
                                   	 <div class="contact-info" id="contact-info-details" style="display:none;">
                                      
                                      <div class="profile-pic pull-left"><img src="" onerror="setDefaultAvatar2(this)"></div>
                                      <div class="details" >
                                        <span class="name"></span>
                                        <div class="job-title"></div>
                                      </div>
                                      <div class="remove-contact-person" style="">
                                      <button type="button" class="close" style="" >×</button>
                                      </div>
                                    </div>
                                   
                                       <select id="select-contact" class="chosen-process" data-placeholder="Select contact person" data-localize-2="modules.contact.form.select-contact-person">
                                           <option></option> <!-- intentionaly left blank for placeholder purpose!!! -->
                                            <% for(var i=0; i< avContacts.length; i++){ %>
                                    <option value="<%= avContacts[i].id %>" position="<%= avContacts[i].position %>"><%= avContacts[i].name %></option>
                                    <% } %>
                                       </select>
                                   </div>
                           </div>

                           <div class="control-group">
                               <label class="control-label" for="inputEmail" data-localize="modules.contact.form.subject">Subject:</label>
                                   <div class="controls">
                                       <input type="text" id="quick-message-subject" />
                                   </div>
                           </div>

                           <div class="control-group">
                               <label class="control-label" for="inputEmail" data-localize="modules.contact.form.message">Message:</label>
                                   <div class="controls">
                                       <textarea rows="5" id="quick-message-content"></textarea>
                                   </div>
                           </div>

                       </form>
                      
                   </div>
                </div>

                <!-- Notice the structure of links that will be common for all modals -->
                <div class="modal-footer">
                	
                    <button class="btn btn-large modal-close" id="cancel-quick-message" data-localize="general.cancel">Cancel</button>
                    <button class="btn btn-next btn-large" id="send-quick-message" data-localize="general.send">Send</button>
                </div>
                
            </div>